{
  "name": "dotfile-toggle",
  "publisher": "Enlightened Solutions, LLC",
  "displayName": "Dotfile Toggle",
  "description": "Toggle visibility of dotfiles in the Explorer",
  "version": "0.0.1",
  "engines": {
    "vscode": ">=1.74.0"
  },
  "categories": ["Other"],
  "keywords": ["dotfiles", "files", "explorer", "toggle", "visibility", "hidden"],
  "repository": {
    "type": "git",
    "url": "https://github.com/CatDogBark/dotfile-toggle"
  },
  "activationEvents": ["onStartupFinished", "onCommand:dotfileToggle.toggle"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotfileToggle.toggle",
        "title": "Toggle Dotfiles",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dotfileToggle.toggle",
          "when": "view == workbench.explorer.fileView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "dotfileToggle.toggle"
        }
      ]
    },
    "configuration": {
      "title": "Dotfile Toggle",
      "properties": {
        "dotfileToggle.hideDotfiles": {
          "type": "boolean",
          "default": false,
          "description": "Hide files starting with a dot"
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x"
  }
}